var App = angular.module('App', ['loggly'])
.run(["loggly", function(loggly) {
    loggly.setApiKey('3e8f8c6f-2161-4544-8c04-bc134ac82590');
}])
.directive('entryForm', ['loggly', function (loggly){
  return {
    restrict: 'E',
    scope: {
      entry: '=entry'
    },
    templateUrl: "<%=asset_path 'templates/entry_form.html'%>",
    link: function(scope, elem, attrs) {
      var input = elem.find('input'),
          form = elem.find('form');
      scope.editing = false;

      elem.bind('dblclick', function(){
        loggly.info("Editing started");
        scope.editing = true;
        input.select();
        scope.$apply();
      });

      input.bind('keydown', function(e) {
        switch(e.which) {
          case 13: //Enter
            form.submit();
          case 27: //Esc
            loggly.info("Editing Cancelled")
            scope.editing = false;
        }
        scope.$apply();
      });
    }
  };
}])
.directive('csrf', function(){
  return {
    restrict: 'A',
    compile: function(tElement, tAttrs, transclude) {
      var input = $("<input/>", {type: 'hidden', name:'authenticity_token', value: $("meta[name='csrf-token']").attr("content") });
      tElement.append(input);
    }
  };
});
